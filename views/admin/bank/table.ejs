<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for (let i = 0; i < banks.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= banks[i].name %></td>
      <td><%= banks[i].bankName %></td>
      <td><%= banks[i].noRekening %></td>
      <td>
        <form
          action="/bank/delete/<%= banks[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/bank/edit/<%= banks[i]._id %>"
            class="btn btn-info btn-sm"
            ><i class="fas fa-pencil-alt"></i> Ubah</a
          >
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i> Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
  <tfoot>
    <tr>
      <th>No.</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No Rekening</th>
      <th>Aksi</th>
    </tr>
  </tfoot>
</table>
